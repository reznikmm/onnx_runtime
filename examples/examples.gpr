with "config/examples_config.gpr";
project Examples is

   for Source_Dirs use ("MNIST", "ljspeech", "config");
   for Object_Dir use "obj/" & Examples_Config.Build_Profile;
   for Create_Missing_Dirs use "True";
   for Exec_Dir use "bin";
   for Main use ("mnist.adb", "mnist_sdl.adb", "ljspeech.adb");

   package Compiler is
      for Default_Switches ("Ada") use Examples_Config.Ada_Compiler_Switches;
   end Compiler;

   package Binder is
      for Switches ("Ada") use ("-Es"); --  Symbolic traceback
   end Binder;

   package Linker is
      for Switches ("Ada") use () & "-lm" & "-lz" & "-lSDL2_ttf" & "-lSDL2-2.0";
   end Linker;

end Examples;
